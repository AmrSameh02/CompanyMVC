@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<form asp-action="Index">
    <div class="row">
            <div class="col-8">
            <input type="text" name="InputSearch" class="form-control" />
            </div>    
            <div class="col-4">
                <input type="submit" name="Search" class="btn btn-success" />
            </div>
    </div>
 </form>

<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />



@if(Model.Count()> 0)
{
    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.WorkFor)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@employee.ImageName" width="75" class="rounded-circle"/>
                    </td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.WorkFor?.Name</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(E => employee.Salary)</td>
                    <td>@Html.DisplayFor(E => employee.IsActive)</td>
                    <td>@employee.HiringDate</td>
                    <partial name="_ButtonPartialView" model="@employee.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
    <h4>There Are No Employees Yet</h4>
    </div>
}